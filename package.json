{
  "name": "server-checker",
  "version": "0.1.0",
  "description": "A system to measure the temperature with a raspberry pi, with an email trigger. Configurable over a website hosted in the raspberry.",
  "main": "index.js",
  "scripts": {
    "test": "xo",
    "start": "node index.js",
    "webserver": "node src/webserver.js",
    "trigger": "node src/trigger.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dizzyrobin/rpi-trigger.git"
  },
  "keywords": [
    "rasberry pi",
    "trigger",
    "email",
    "server",
    "checker"
  ],
  "author": "dizzyrobin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dizzyrobin/rpi-trigger/issues"
  },
  "homepage": "https://github.com/dizzyrobin/rpi-trigger#readme",
  "devDependencies": {
    "nodemon": "^1.18.4",
    "parcel": "^1.9.7",
    "xo": "^0.23.0"
  },
  "xo": {
    "space": 2,
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-basic-auth": "^1.1.5",
    "nodemailer": "^4.6.8",
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  }
}
